<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="Storage Perms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/storage_perms"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button
            android:text="Location Perms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/location_perms" app:layout_constraintTop_toTopOf="@id/storage_perms"
            android:layout_marginTop="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    <Button
            android:text="Camera Perms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/camera_perms"
            app:layout_constraintTop_toTopOf="@id/location_perms"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="100dp"/>
    <Button
            android:text="Request All"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/request_all"
            app:layout_constraintTop_toTopOf="@id/camera_perms"
            android:backgroundTint="@color/colorPrimaryDark"
            android:textColor="#fff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="100dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>